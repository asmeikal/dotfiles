if [ ! -e ~/.zshfunctions ] ; then
	echo "~/.zshfunctions missing."
	return 1
else
	. ~/.zshfunctions
fi

# ls shortcuts
LS_OPTIONS="-1Fhp"

UNAME=`uname`
if [ "$UNAME" = "Darwin" ] ; then
	# OS X
	LS_OPTIONS="$LS_OPTIONS -G"
else
	# Linux
	LS_OPTIONS="$LS_OPTIONS --color=auto"
fi
unset UNAME
alias ls="ls $LS_OPTIONS"
alias ll="ls $LS_OPTIONS -l"
alias la="ls $LS_OPTIONS -A"
alias lla="ls $LS_OPTIONS -lA"

unset LS_OPTIONS

# As seen on http://natelandau.com/my-mac-osx-bash_profile/
alias cp="cp -iv"
alias mv="mv -iv"
alias mkdir="mkdir -pv"

# find TODOs
alias todos="grep -nr TODO ."

# Assembly stuff

alias das="objdump -D"
alias hex="hexdump -C"

# don't wrap lines with less

alias less="less -S"

