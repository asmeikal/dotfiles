if [ ! -e ~/.zshfunctions ] ; then
	echo "~/.zshfunctions missing."
	return 1
else
	. ~/.zshfunctions
fi

# ls shortcuts
LS_OPTIONS="-1Fhp"

UNAME=`uname`
if [ "$UNAME" = "Darwin" ] ; then
	# OS X
	LS_OPTIONS="$LS_OPTIONS -G"
else
	# Linux
	LS_OPTIONS="$LS_OPTIONS --color=auto"
fi
unset UNAME
alias ls="ls $LS_OPTIONS"
alias l="ls $LS_OPTIONS"
alias ll="ls $LS_OPTIONS -l"
alias la="ls $LS_OPTIONS -A"
alias lla="ls $LS_OPTIONS -lA"

unset LS_OPTIONS

# As seen on http://natelandau.com/my-mac-osx-bash_profile/
alias cp="cp -iv"
alias mv="mv -iv"
alias mkdir="mkdir -pv"

# find TODOs
alias todos="grep -nr TODO ."

# Assembly stuff

alias das="objdump -D"
alias hex="hexdump -C"

# don't wrap lines with less

alias less="less -S"

# latexmk alias

alias mkpdf="latexmk -e \"$pdflatex=q/pdflatex -synctex=1 -interaction=nonstopmode/\" -pdf"

alias last-commit="git --no-pager log -1 --oneline --no-decorate --no-color | awk '{printf \"%s\",\$1}' | pbcopy"

alias git-cleanup-local='git branch --merged | egrep -v "(^\*|master|dev|version)" | xargs git branch -d'

alias git-cleanup-remote='git remote prune origin'

alias ts='tmux switch-client -t'

