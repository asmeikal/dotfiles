# NVM
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# User bin
export PATH="${PATH}:${HOME}/bin"

# Powerline
export POWERLINE_ROOT="/usr/lib/python3.8/site-packages/powerline"
powerline-daemon -q
. "${POWERLINE_ROOT}/bindings/zsh/powerline.zsh"

# Syntax highlighting
source /usr/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# Local bins
export PATH="${PATH}:${HOME}/.local/bin"

# aws cli completion
source "${HOME}/.local/bin/aws_zsh_completer.sh"

# yarn
export PATH="${PATH}:$(yarn global bin)"

# android studio
export ANDROID_HOME="${HOME}/Android/Sdk"
export ANDROID_SDK_ROOT="${ANDROID_HOME}"
export PATH="${ANDROID_HOME}:${PATH}"
export PATH="$PATH:$ANDROID_HOME/emulator"
export PATH="$PATH:$ANDROID_HOME/tools"
export PATH="$PATH:$ANDROID_HOME/tools/bin"
export PATH="$PATH:$ANDROID_HOME/platform-tools"

# Go
export PATH="${PATH}:${HOME}/go/bin"
export GOPATH="${HOME}/go"

# pyenv
export PATH="/home/asmeikal/.pyenv/bin:$PATH"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

# poetry
export PATH="$HOME/.poetry/bin:$PATH"

# ruby
export PATH="$HOME/.gem/ruby/2.7.0/bin:$PATH"

# flutter
export PATH="$HOME/bin/flutter/bin:$PATH"

source ~/.zsecrets


export PATH="$HOME/.cargo/bin:$PATH"

# flipper
export PATH="$HOME/bin/flipper:$PATH"

# added by travis gem
[ ! -s /home/asmeikal/.travis/travis.sh ] || source /home/asmeikal/.travis/travis.sh

